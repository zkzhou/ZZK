<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MarqueeViewStyle">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="paddingTopBottom" format="dimension"/>
        <attr name="startDelayTime" format="integer"/>
        <attr name="reRepeatDelayTime" format="integer"/>
        <attr name="itemAnimationTime" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CoverColorImageView">
        <attr name="cover_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PullRefreshRecyclerView">
        <attr name="refreshEnabled" format="boolean"/>
        <attr name="loadMoreEnabled" format="boolean"/>
        <attr name="refreshHeaderLayout" format="reference"/>
        <attr name="loadMoreFooterLayout" format="reference"/>
        <attr name="refreshFinalMoveOffset" format="dimension"/>
    </declare-styleable>

